{% include('base.html.twig') %}


<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title mt-2">Connection</h4>
                    </header>
                    <article class="card-body">
                        <form class="needs-validation" action="{{ url }}" method="POST" novalidate>
                            {# Pseudo #}
                            <label for="validationCustom01">Pseudo* </label>
                                <input type="text" class="form-control" placeholder="Pseudo" id="validationCustom01" name="username" required>
                                {# vérif js #}
                                <div class="valid-feedback">
                                    Cela semble bon!
                                </div>
                                <div class="invalid-feedback">
                                    Pseudo incorect
                                </div>
                            {# Email #}
                            <div class="form-row">
                                <div class="col form-group">
                                    <label for="validationCustom01">Email*</label>
                                    <input type="email" class="form-control" placeholder="Legrand@mail.test" id="validationCustom01" name="email" required>
                                    {# vérif js #}
                                    <div class="valid-feedback">
                                        Cela semble bon!
                                    </div>
                                    <div class="invalid-feedback">
                                        Email incorect
                                    </div>

                                </div>
                            </div>
                            {# Mot de passe #}
                            <div class="form-row">
                            </div>
                            <div class="form-group">
                                <label for="validationCustom01">Mot de passe*</label>
                                <input class="form-control" type="password" placeholder="mdp" id="validationCustom01" name="mdp" required>
                                {# vérif js #}
                                <div class="valid-feedback">
                                    Cela semble bon!
                                </div>
                                <div class="invalid-feedback">
                                    Mot de passe incorect
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="hidden" value="identifierUtilisateur" name="action" />
                                <button type="submit" class="btn btn-danger btn-block">Se connecter </button>
                            </div>
                            <small class="text-muted">En cliquant sur le bouton "Inscription", vous confirmez que vous acceptez nos <br> Conditions d'utilisation et Politique de confidentialité.</small>
                        </form>
                    </article>
                    <div class="border-top card-body text-center">Pas de compte? <a href="{{ url }}?action=inscrireUtilisateur">Créez en un</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
